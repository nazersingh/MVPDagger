<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rel_inbox"

    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user_inbox"
        android:layout_width="@dimen/_70dp"
        android:layout_height="@dimen/_70dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_marginBottom="@dimen/_20dp"
        android:src="@mipmap/index" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toRightOf="@id/iv_user_inbox">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_usr_name_inbox"
                style="@style/MyNormalTextView"
                android:inputType="textCapSentences"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="safjkjkashfjkh"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_lst_msg_tym"
                style="@style/MySmallTextView"
                android:text="fhsdsjklhjklshdlf"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/_10dp"
                android:textColor="@color/colorAccent"

                />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_lst_msg"
            style="@style/MyMediumTextView"
            android:layout_marginTop="@dimen/_10dp"
            android:text="jksdjkf"
            android:layout_marginRight="@dimen/_10dp"
            android:textColor="@color/colorAccent"

            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_marginLeft="@dimen/_30dp"
        android:background="@color/light_grey"
        >

    </View>
</RelativeLayout>