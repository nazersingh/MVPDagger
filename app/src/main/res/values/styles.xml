<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black_opacity</item>

    </style>

    <style name="TextInputAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black_opacity</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="colorAccent">@color/black_opacity</item>
        <item name="colorControlNormal">@color/black_opacity</item>
        <item name="colorControlActivated">@color/black_opacity</item>
    </style>

    <style name="TabText" parent="Base.Widget.Design.TabLayout">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorControlActivated">@color/light_grey</item>
        <item name="colorControlNormal">@color/light_grey</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="MyEditTextNumberType" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/light_grey</item>
        <item name="colorControlNormal">@color/light_grey</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="Common_EditText" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorControlActivated">@color/black_opacity</item>
        <item name="colorControlNormal">@color/black_opacity</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="MySmallTextView" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyMediumTextView" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyNormalTextView" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Common_Button" parent="android:Widget.Button">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
